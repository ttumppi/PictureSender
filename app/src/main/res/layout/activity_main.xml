<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:context=".MainActivity" android:id="@+id/coordinatorLayout">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="135dp" app:srcCompat="@mipmap/stock_image" android:id="@+id/droidImage"
            android:adjustViewBounds="false"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="133dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="162dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>